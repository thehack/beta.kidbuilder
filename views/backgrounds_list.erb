<!DOCTYPE html><html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
</head>
<body>
<% @background_list.each do |img| %>
<div id="bgImages">
	<a class="/images/backgrounds/<%= img %>"><img src="/images/backgrounds/<%= img %>"width="200"/></a>
<% end %>
</div>
<script type="text/javascript">
$('#bgImages a').click(function() {
	$('#img_elem').replaceWith("<img src='" + $(this).attr('class') + "' id='img_elem' />");
	$('#img_elem').hide();
	var url = "url(" + $(this).attr('class') + ")";
	$('#workArea').css('background-image', url);

	$([overlay, alertbox]).remove();
	return false;
});
</script>
</body>
</html>
