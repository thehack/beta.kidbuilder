<div class="row">
	<div class="span12"><h1>
		<%= @user.login %></h1>
	</div>
</div>
<div class="row">
	<div class="span6">
		<h3>Completed Levels</h3>
		<% if @user.levels.empty? %>
		<p>No completed Levels Yet</p>
		<% end %>
		<% @user.levels.each do |level| %>
		<p><%= level.title %>
		<% end %> 
	</div>
</div>
<div class="row">
	<div class="span6">
		<h3>Badges</h3>
		<% @user.badges.each do |badge| %>
		<img src="/images/<%=h badge.icon_url %>" alt="<%=h badge.name %>" />&nbsp;&nbsp;&nbsp;
		<% end %> 
	</div>
</div>